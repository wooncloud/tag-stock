{
  "manifest_version": 3,
  "name": "Adobe Stock Tool",
  "version": "1.1.0",
  "description": "Content script for Adobe Stock uploads page",
  "permissions": [
    "activeTab"
  ],
  "host_permissions": [
    "https://contributor.stock.adobe.com/*",
    "https://submit.shutterstock.com/*"
  ],
  "icons": {
    "16": "assets/icon/icon16.png",
    "19": "assets/icon/icon19.png",
    "32": "assets/icon/icon32.png",
    "38": "assets/icon/icon38.png",
    "48": "assets/icon/icon48.png",
    "128": "assets/icon/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://contributor.stock.adobe.com/kr/uploads*", 
        "https://submit.shutterstock.com/*"
      ],
      "js": ["dist/content.js"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_title": "Adobe Stock Tool",
    "default_icon": {
      "16": "assets/icon/icon16.png",
      "19": "assets/icon/icon19.png",
      "32": "assets/icon/icon32.png",
      "38": "assets/icon/icon38.png"
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["button-handler.js"],
      "matches": [
        "https://contributor.stock.adobe.com/*",
        "https://submit.shutterstock.com/*"
      ]
    }
  ]
} 