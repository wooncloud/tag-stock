{
  "manifest_version": 3,
  "name": "TagStock",
  "version": "1.1.0",
  "description": "AI-powered metadata automation for stock photo sites",
  "permissions": [
    "activeTab",
    "sidePanel",
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "https://contributor.stock.adobe.com/*",
    "https://submit.shutterstock.com/*"
  ],
  "icons": {
    "16": "assets/icon/icon16.png",
    "19": "assets/icon/icon19.png",
    "32": "assets/icon/icon32.png",
    "38": "assets/icon/icon38.png",
    "48": "assets/icon/icon48.png",
    "128": "assets/icon/icon128.png"
  },
  "background": {
    "service_worker": "dist/background.js",
    "type": "module"
  },
  "side_panel": {
    "default_path": "src/sidepanel/sidepanel.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://contributor.stock.adobe.com/kr/uploads*",
        "https://submit.shutterstock.com/*"
      ],
      "js": ["dist/content.js"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_title": "TagStock",
    "default_icon": {
      "16": "assets/icon/icon16.png",
      "19": "assets/icon/icon19.png",
      "32": "assets/icon/icon32.png",
      "38": "assets/icon/icon38.png"
    }
  }
}
