{
  "manifest_version": 3,
  "name": "TagStock",
  "version": "1.1.0",
  "description": "AI-powered metadata automation for stock photo sites",
  "permissions": ["activeTab", "sidePanel", "tabs", "storage", "identity", "downloads"],
  "host_permissions": [
    "https://tagstock.app/*",
    "http://localhost:3000/*",
    "https://contributor.stock.adobe.com/*",
    "https://submit.shutterstock.com/*",
    "https://cdn.shutterstock.com/*",
    "https://*.ftcdn.net/*"
  ],
  "icons": {
    "16": "assets/icons/icon16.png",
    "32": "assets/icons/icon32.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "side_panel": {
    "default_path": "sidepanel/sidepanel.html"
  },
  "content_scripts": [
    {
      "matches": ["https://contributor.stock.adobe.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://submit.shutterstock.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "TagStock",
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "32": "assets/icons/icon32.png"
    }
  }
}
