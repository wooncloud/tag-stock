{
  "name": "tagstock-chrome-extension",
  "version": "1.0.0",
  "description": "Chrome extension to automate stock photo metadata generation with AI",
  "main": "background.js",
  "type": "module",
  "scripts": {
    "build:css": "npx tailwindcss -i ./src/sidepanel/input.css -o ./src/sidepanel/styles.css --minify",
    "build:js": "vite build",
    "build": "npm run build:css && npm run build:js",
    "dev": "npm run build:css && vite build --watch",
    "lint": "eslint src/*.js",
    "package": "npm run build && zip -r tagstock.zip dist src/sidepanel assets manifest.json -x 'node_modules/*' '*.git*' 'package*.json' '*.DS_Store'"
  },
  "keywords": [
    "chrome-extension",
    "tagstock",
    "adobe-stock",
    "shutterstock",
    "automation",
    "ai-metadata",
    "stock-photography"
  ],
  "author": "TagStock",
  "license": "MIT",
  "dependencies": {
    "@google/genai": "^1.0.2"
  },
  "devDependencies": {
    "@iconify-json/ic": "^1.2.4",
    "@iconify-json/simple-icons": "^1.2.68",
    "@tailwindcss/postcss": "^4.0.0",
    "autoprefixer": "^10.4.24",
    "eslint": "^8.0.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.0.0",
    "vite": "^5.4.11"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-username/tagstock.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/tagstock/issues"
  },
  "homepage": "https://github.com/your-username/tagstock#readme"
}
